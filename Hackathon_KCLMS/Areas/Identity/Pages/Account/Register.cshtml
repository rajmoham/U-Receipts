@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="centering justify-content-center" style="margin-top: 5rem;">
                <img class="mb-4" src="https://i.imgur.com/BBhFn5b.png" style="border-radius:10px;" alt="" height="72" width="72">
            </div>

            <h4 class="text-center">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control mt-xxl-2" id="floatingInput" placeholder="FirstName">
                <label asp-for="Input.FirstName" for="floatingInput">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control mt-xxl-2" id="floatingInput" placeholder="LastName">
                <label asp-for="Input.LastName" for="floatingInput">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" type="email" class="form-control mt-xxl-2" id="floatingInput" placeholder="name@example.com">
                <label asp-for="Input.Email" for="floatingInput">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" type="password" class="form-control mt-xxl-2" id="floatingPassword" placeholder="Password">
                <label asp-for="Input.Password" for="floatingPassword">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control mt-xxl-2" id="floatingPassword" placeholder="ConfirmPassword">
                <label asp-for="Input.ConfirmPassword" for="floatingPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="w-100 btn theme-clr text-white  mt-5" type="submit">Register</button>
            </div>


        </form>
        <a asp-controller="Account" asp-action="RegisterStore" asp-route-returnUrl="@Model.ReturnUrl" class="w-100 btn btn-secondary" style="margin-bottom: 5rem;">Register as store</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
