@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center" style="margin-top:7rem;">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="centering justify-content-center">
                    <img class="mb-4" src="https://i.imgur.com/BBhFn5b.png" style="border-radius:10px;" alt="" height="72" width="72">
                </div>
                <h4 class="text-center">Use a local account to log in.</h4>
                <hr />

                <div class="form-floating">
                    <input asp-for="Input.Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label asp-for="Input.Email" for="floatingInput">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" type="password" class="form-control mt-xxl-2" id="floatingPassword" placeholder="Password">
                    <label asp-for="Input.Password" for="floatingPassword">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox mt-xxl-4">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="w-100 btn theme-clr text-white" type="submit">Log in</button>
                </div>

                <div class="form-group text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
