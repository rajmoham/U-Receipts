@model Hackathon_KCLMS.ViewModels.Account.RegisterStoreVM 

@{
    ViewData["Title"] = "Register Store";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post">
            <div class="centering justify-content-center" style="margin-top: 5rem;">
                <img class="mb-4" src="https://i.imgur.com/BBhFn5b.png" style="border-radius:10px;" alt="" height="72" width="72">
            </div>
            <h4 class="text-center">Create a new account.</h4>
            <input asp-for="@Model.ReturnUrl" hidden />
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div style="display: grid; grid-template-columns: auto auto; grid-column-gap: 4rem;">
                <div>

                    <div class="form-floating">
                        <input asp-for="@Model.User.FirstName" class="form-control mt-xxl-2" id="floatingInput" placeholder="FirstName">
                        <label asp-for="@Model.User.FirstName" for="floatingInput">First Name</label>
                        <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="@Model.User.LastName" class="form-control mt-xxl-2" id="floatingInput" placeholder="LastName">
                        <label asp-for="@Model.User.LastName" for="floatingInput">Last Name</label>
                        <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="@Model.Store.Name" class="form-control mt-xxl-2" id="floatingInput" placeholder="StoreName">
                        <label asp-for="@Model.Store.Name" for="floatingInput">Store Name</label>
                        <span asp-validation-for="@Model.Store.Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="@Model.User.Email" class="form-control mt-xxl-2" id="floatingInput" placeholder="Email">
                        <label asp-for="@Model.User.Email" for="floatingInput">Email</label>
                        <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="@Model.Password" type="password" class="form-control mt-xxl-2" id="floatingPassword" placeholder="Password">
                        <label asp-for="@Model.Password" for="floatingPassword">Password</label>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="@Model.ConfirmPassword" type="password" class="form-control mt-xxl-2" id="floatingPassword" placeholder="ConfirmPassword">
                        <label asp-for="@Model.ConfirmPassword" for="floatingPassword">Confirm Password</label>
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div>

                    <div class="form-floating">
                        <input asp-for="@Model.Store.Address.Line1" class="form-control mt-xxl-2" id="floatingInput" placeholder="AddressLine1">
                        <label asp-for="@Model.Store.Address.Line1" for="floatingInput">Address Line 1</label>
                        <span asp-validation-for="@Model.Store.Address.Line1" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="@Model.Store.Address.Line2" class="form-control mt-xxl-2" id="floatingInput" placeholder="AddressLine2">
                        <label asp-for="@Model.Store.Address.Line2" for="floatingInput">Address Line 2</label>
                        <span asp-validation-for="@Model.Store.Address.Line2" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="@Model.Store.Address.Line3" class="form-control mt-xxl-2" id="floatingInput" placeholder="AddressLine3">
                        <label asp-for="@Model.Store.Address.Line3" for="floatingInput">Address Line 3</label>
                        <span asp-validation-for="@Model.Store.Address.Line3" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="@Model.Store.Address.Postcode" class="form-control mt-xxl-2" id="floatingInput" placeholder="PostCode">
                        <label asp-for="@Model.Store.Address.Postcode" for="floatingInput">Post Code</label>
                        <span asp-validation-for="@Model.Store.Address.Postcode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="w-100">
                <button type="submit" class="w-50 btn theme-clr mt-2" style="margin-left: 25%;">Register</button>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
