
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>U-Receipts | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="theme-clr box-shadow">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light theme-clr border-bottom mt-2 mb-2">
            <div class="container">
                <div class="d-flex align-items-center justify-content-center justify-content-lg-start">
                    <a class="d-flex align-items-center mb-2 mb-lg-0 mx-4 text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="https://i.imgur.com/BBhFn5b.png" width="40" height="40">
                    </a>

                    @if (User.IsInRole(Hackathon_KCLMS.Helpers.Constants.UserRoles.Customer))
                    {

                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                            <li class="nav-item">
                                <a class="nav-link px-2 text-white" asp-area="" asp-controller="Account" asp-action="ManageCards">Cards</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-2 text-white" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>
                        </ul>

                    }
                    else
                    {
                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                            <li><a href="#reasons" class="nav-link px-2 text-white">About Us</a></li>
                            <li><a href="https://github.com/rajmoham/hackathon" target="_blank" class="nav-link px-2 text-white">GitHub Repo</a></li>
                        </ul>
                    }
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted theme-clr">
        <div class="container text-white">
            - KCLMS
        </div>
    </footer>-->

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-muted">© 2021 U-Recipts, Inc</p>

            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <img src="https://i.imgur.com/BBhFn5b.png" width="40" height="40" style="border-radius:6px;">
            </a>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a href="#reasons" class="nav-link px-2 text-muted">About Us</a></li>
                <li class="nav-item"><a href="https://github.com/rajmoham/hackathon" target="_blank" class="nav-link px-2 text-muted">GitHub Repo</a></li>

            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
    </html>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
